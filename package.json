{
  "name": "opensearch-automation-app",
  "version": "0.1.0",
  "description": "An Automation App that handles all your GitHub Repository Activities",
  "author": "Peter Zhu",
  "homepage": "https://github.com/opensearch-project/automation-app",
  "bin": {
    "opensearch-automation-app": "./bin/app.js"
  },
  "keywords": [
    "probot",
    "github",
    "automation-app"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "npm run clean && npm run build && probot run ./bin/app.js",
    "clean": "rm -rf ./bin/*",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "test": "jest"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dedent": "^1.5.1",
    "js-yaml": "^4.1.0",
    "probot": "^13.0.1",
    "randomized-string": "^2.0.1",
    "randomstring": "^1.3.0",
    "ts-yaml": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@octokit/types": "^13.5.0",
    "@octokit/webhooks-types": "^7.5.1",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "nock": "^14.0.0-beta.5",
    "prettier": "^3.3.3",
    "smee-client": "^2.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.5.0"
  },
  "engines": {
    "node": ">= 18"
  }
}
